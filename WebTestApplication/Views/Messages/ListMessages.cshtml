@model IEnumerable<WebTestApplication.Models.Messages>

@{
    ViewData["Title"] = "ListMessages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListMessages</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
